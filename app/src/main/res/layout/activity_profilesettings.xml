<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1"
        tools:context=".Activity.RegisterActivity">

        <TextView
            android:id="@+id/SignIn"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="EDUBOOKS"
            android:textColor="@color/Off_white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/BackButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@id/SignIn"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/ProfileInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Logo"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_profile_box"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Profile Information"
            android:textSize="25dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/Brown"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProfileInformation"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_profile_box"
            android:drawablePadding="20dp"
            android:padding="15dp"
            android:hint="Name"
            android:textSize="14dp"
            android:textColorHint="#a2a2a2"
            android:textColor="@color/Brown"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_profile_box"
            android:padding="15dp"
            android:hint="Surname"
            android:textColorHint="#a2a2a2"
            android:textColor="@color/Brown"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Surname"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_profile_box"
            android:padding="15dp"
            android:hint="Email"
            android:textColorHint="#a2a2a2"
            android:textColor="@color/Brown"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Email"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_profile_box"
            android:padding="15dp"
            android:hint="Phone"
            android:textColorHint="#a2a2a2"
            android:textColor="@color/Brown"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/EditInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PhoneNumber"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/Off_white"
            android:backgroundTint="@color/Dark_Orange"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:text="Update Information"
            android:shadowColor="@color/Brown" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/EditInformation"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:text="Change Password"
            android:textColor="@color/Off_white"
            android:backgroundTint="@color/Dark_Orange"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:shadowColor="@color/Brown" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MyListing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ChangePassword"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:text="My Listings"
            android:textColor="@color/Off_white"
            android:backgroundTint="@color/Dark_Orange"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:shadowColor="@color/Brown" />

    </RelativeLayout>
</ScrollView>