<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1"
        tools:context=".Activity.RegisterActivity">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:text="PROFILE"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/BackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/menuwhite" />


        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="15dp"

            android:background="@drawable/ic_profile_box"
            android:drawablePadding="20dp"

            android:hint="Name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Brown"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/Surname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_profile_box"

            android:hint="Surname"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Brown"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Surname"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_profile_box"

            android:hint="Email Address "
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Brown"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Email"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_profile_box"

            android:hint="Phone Number"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Brown"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/ProfilePassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/PhoneNumber"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_profile_box"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Brown"
            android:textSize="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/EditInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/ProfilePassword"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/Dark_Orange"
            android:text="Update Information"
            android:textColor="@color/Off_white" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/MyListing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/EditInformation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/Brown"
            android:text="My Listings"
            android:textColor="@color/Off_white" />


    </RelativeLayout>
</ScrollView>